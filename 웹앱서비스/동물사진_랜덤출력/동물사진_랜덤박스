<center><input class="w-btn" onclick="dog();"style="position: relative; border: none; color:green; display: inline-block; padding: 15px 30px; border-radius: 15px; box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2); text-decoration: none; font-weight: 600; transition: 0.25s;" type="button" value="다른 강아지 사진 보기" /><br /><br /><img id="img-dog" class="cdimg" src="x" /><br /><br /><br /><input class="w-btn" onclick="cat();" style="position: relative; border: none; display: inline-block; color:blue; padding: 15px 30px; border-radius: 15px; box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2); text-decoration: none; font-weight: 600; transition: 0.25s;" type="button" value="다른 고양이 사진 보기" /><br /><br /><img id="img-cat" src="x" class="cdimg" /></center>

<style>
  .cdimg {
   max-width:800px;
   max-height:1500px;   
  }
  
  
  .w-btn:hover {
    letter-spacing: 2px;
    transform: scale(1.2);
    cursor: pointer;
}
 
  
</style>
<script>
  dog();
cat();
function dog() {
        $.ajax({
            type: "GET",
            url: "https://api.thedogapi.com/v1/images/search",
            data: {},
            success: function(response){
                console.log(response)
                let cat_img = response[0]["url"];
                $("#img-dog").attr("src", cat_img)

            }

        });
}

function cat() {
        $.ajax({
            type: "GET",
            url: "https://api.thecatapi.com/v1/images/search",
            data: {},
            success: function(response){
                console.log(response)
                let cat_img = response[0]["url"];
                $("#img-cat").attr("src", cat_img)


            }

        });
}

  
  </script>
